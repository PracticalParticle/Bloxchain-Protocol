{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": "../..",
    "paths": {
      "@sdk/*": ["sdk/typescript/*"]
    }
  },
  "include": [
    "../sdk/typescript/**/*",
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../sdk/typescript/utils/workflow/core/workflow-transition-generator.tsx"
  ]
}

